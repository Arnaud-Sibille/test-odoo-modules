<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="table">
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <t t-foreach="options['columns']" t-as="column">
                            <th><t t-out="column['name']"/></th>
                        </t>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="lines" t-as="line">
                        <tr>
                            <th><t t-out="line['name']"/></th>
                            <t t-foreach="line['columns']" t-as="column_values">
                                <td><t t-out="column_values['name']"/></td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
        </template>

