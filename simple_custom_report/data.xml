<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="simple_custom_report" model="account.report">
            <field name="name">Simple Custom Report</field>
            <field name="custom_handler_model_id" ref="model_simple_custom_report_handler"/>
            <field name="column_ids">
                <record id="simple_custom_report_invoice_date_col" model="account.report.column">
                    <field name="name">Invoice Date</field>
                    <field name="expression_label">invoice_date</field>
                    <field name="figure_type">date</field>
                </record>
                <record id="simple_custom_report_date_col" model="account.report.column">
                    <field name="name">Date</field>
                    <field name="expression_label">date</field>
                    <field name="figure_type">date</field>
                </record>
                <record id="simple_custom_report_date_maturity_col" model="account.report.column">
                    <field name="name">Due Date</field>
                    <field name="expression_label">date_maturity</field>
                    <field name="figure_type">date</field>
                </record>
                <record id="simple_custom_report_credit_col" model="account.report.column">
                    <field name="name">Credit</field>
                    <field name="expression_label">credit</field>
                </record>
                <record id="simple_custom_report_debit_col" model="account.report.column">
                    <field name="name">Debit</field>
                    <field name="expression_label">debit</field>
                </record>
                <record id="simple_custom_report_balance_col" model="account.report.column">
                    <field name="name">Balance</field>
                    <field name="expression_label">balance</field>
                </record>
            </field>
            <field name="line_ids">
                <record id="simple_custom_report_line" model="account.report.line">
                    <field name="name">Simple Custom Report</field>
                    <field name="groupby">partner_id,id</field>
                    <field name="expression_ids">
                        <record id="simple_custom_report_invoice_date_expr" model="account.report.expression">
                            <field name="label">invoice_date</field>
                            <field name="engine">custom</field>
                            <field name="formula">_report_custom_engine_simple_custom_report</field>
                            <field name="subformula">invoice_date</field>
                        </record>
                        <record id="simple_custom_report_date_expr" model="account.report.expression">
                            <field name="label">date</field>
                            <field name="engine">custom</field>
                            <field name="formula">_report_custom_engine_simple_custom_report</field>
                            <field name="subformula">date</field>
                        </record>
                        <record id="simple_custom_report_date_maturity_expr" model="account.report.expression">
                            <field name="label">date_maturity</field>
                            <field name="engine">custom</field>
                            <field name="formula">_report_custom_engine_simple_custom_report</field>
                            <field name="subformula">date_maturity</field>
                        </record>
                        <record id="simple_custom_report_credit_expr" model="account.report.expression">
                            <field name="label">credit</field>
                            <field name="engine">custom</field>
                            <field name="formula">_report_custom_engine_simple_custom_report</field>
                            <field name="subformula">credit</field>
                        </record>
                        <record id="simple_custom_report_debit_expr" model="account.report.expression">
                            <field name="label">debit</field>
                            <field name="engine">custom</field>
                            <field name="formula">_report_custom_engine_simple_custom_report</field>
                            <field name="subformula">debit</field>
                        </record>
                        <record id="simple_custom_report_balance_expr" model="account.report.expression">
                            <field name="label">balance</field>
                            <field name="engine">custom</field>
                            <field name="formula">_report_custom_engine_simple_custom_report</field>
                            <field name="subformula">balance</field>
                        </record>
                    </field>
                </record>
            </field>
        </record>

        <record id="action_simple_custom_report" model="ir.actions.client">
            <field name="name">Simple Custom Report</field>
            <field name="tag">account_report</field>
            <field name="path">simple-custom-report</field>
            <field name="context" eval="{'report_id': ref('simple_custom_report.simple_custom_report')}"/>
        </record>

        <menuitem id="simple_custom_report_menu" name="Simple Custom Report" action="action_simple_custom_report"/>

    </data>
</odoo>
