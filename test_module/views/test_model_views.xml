<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="test_model_view_form">
            <field name="name">Test Model Form View</field>
            <field name="model">test.model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <field name="name"/>
                        </div>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="parent_model_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="test_model_view_tree">
            <field name="name">Test Model Tree View</field>
            <field name="model">test.model</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="parent_model_total"/>
                    <field name="amount_times_5"/>
                </list>
            </field>
        </record>

        <record model="ir.actions.act_window" id="test_model_action_window">
            <field name="name">Test Model</field>
            <field name="res_model">test.model</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
