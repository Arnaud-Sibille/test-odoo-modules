<odoo>
    <data>
        <record model="ir.ui.view" id="test_model_view_form">
            <field name="name">Test Model Form View</field>
            <field name="model">test.model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="test_model_view_tree">
            <field name="name">Test Model Tree View</field>
            <field name="model">test.model</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record model="ir.actions.act_window" id="test_model_action_window">
            <field name="name">Test Model</field>
            <field name="res_model">test.model</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem name="Test Module" id="root_menu" action="test_model_action_window"/>
    </data>
</odoo>
